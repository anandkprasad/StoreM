<%- include('header') %>

<style>
  /* Override body background for auth pages */
  body {
    background: linear-gradient(135deg, rgba(1,59,105,0.03) 0%, rgba(42,160,255,0.02) 100%);
  }

  /* Viewport wrapper centers only the login card */
  .auth-viewport {
    min-height: calc(100vh - 220px); /* leaves room for header & footer */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px 0;
  }

  .login-container {
    background: white;
    border-radius: 10px;
    box-shadow: 0 12px 30px rgba(2,12,27,0.08);
    padding: 32px;
    max-width: 420px;
    width: 100%;
  }
  .login-header { text-align:center; margin-bottom:18px; }
  .login-header h1 { font-size:24px; color:#013b69; margin:0 0 6px 0; font-weight:700; }
  .login-header p { margin:0; color:#6c757d; }

  .form-group label { font-weight:600; color:#444; }
  .btn-login {
    background: linear-gradient(135deg, #2aa0ff 0%, #1aa3ff 100%);
    border: none;
    padding: 10px 0;
    font-weight:700;
    color: #013b69;
    border-radius:6px;
  }
  .btn-login:hover {
    background: linear-gradient(135deg, #1aa3ff 0%, #2aa0ff 100%);
    color: #012b44;
  }

  .signup-link { text-align:center; margin-top:14px; }
  .signup-link a { color:#2aa0ff; font-weight:700; text-decoration:none; }
  .signup-link a:hover { text-decoration:underline; }

  .alert { margin-bottom:16px; }

  @media (max-width:576px) {
    .login-container { padding:20px; }
    .auth-viewport { min-height: calc(100vh - 260px); }
  }
</style>

<!-- center only the login card -->
<div class="auth-viewport" role="main">
  <div class="login-container" aria-labelledby="login-heading">
    <div class="login-header">
      <h1 id="login-heading"><span style="color:#2aa0ff">K</span>aran Coaching Center</h1>
      <p class="text-muted">Login to your account</p>
    </div>

    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>

    <form method="POST" novalidate>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-block btn-login" aria-label="Login">Login</button>
    </form>

    <div class="signup-link">
      Don't have an account? <a href="/signup">Sign up here</a>
    </div>
  </div>
</div>

<%- include('footer') %>