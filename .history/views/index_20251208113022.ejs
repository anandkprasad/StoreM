<!doctype html>
<html lang="hi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Exact Logo — Karan Coaching Centre</title>
  <style>
    :root{
      --page-bg: #002060;   /* sampled from image */
      --orange:   #e08020;  /* sampled orange */
      --offwhite: #e0e0e0;  /* sampled white-ish */
    }
    html,body{
      height:100%;
      margin:0;
      background:var(--page-bg);
      display:flex;
      align-items:center;
      justify-content:center;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      color:var(--offwhite);
    }

    .frame {
      width:92vmin;
      max-width:900px;
      aspect-ratio:1/1;
      display:grid;
      place-items:center;
      position:relative;
    }

    /* Exact PNG display (pixel-perfect) */
    .exact {
      width:100%;
      height:100%;
      object-fit:contain;
      border-radius:6px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.35);
      background:transparent;
    }

    /* Optional: vector fallback area */
    .vector-wrap {
      position:absolute;
      inset:0;
      display:none; /* toggle with JS if you want to preview the SVG approximation */
      align-items:center;
      justify-content:center;
    }

    .note {
      position:fixed;
      left:16px;
      bottom:14px;
      background:rgba(255,255,255,0.06);
      padding:8px 12px;
      border-radius:8px;
      font-size:14px;
      backdrop-filter: blur(4px);
    }

    .controls {
      position:fixed;
      right:16px;
      bottom:14px;
      display:flex;
      gap:8px;
    }

    .btn {
      background:rgba(255,255,255,0.06);
      color:var(--offwhite);
      border:1px solid rgba(255,255,255,0.06);
      padding:8px 10px;
      border-radius:8px;
      cursor:pointer;
      font-size:13px;
    }

    .btn:active { transform: translateY(1px); }
  </style>
</head>
<body>
  <div class="frame">
    <!-- =================
         EXACT (pixel-perfect)
         Place the original PNG in the same folder and name it exactly:
         "Logo KCC.png" (case-sensitive on some OS)
         ================= -->
    <img class="exact" src="Logo KCC.png" alt="Karan Coaching Centre — exact logo (PNG)">

    <!-- =================
         VECTOR APPROXIMATION (hidden by default)
         It's a handcrafted SVG that visually matches the logo.
         Toggle to visible with the button if you want to compare.
         ================= -->
    <div class="vector-wrap" id="svgWrap" aria-hidden="true">
      <!-- Inline SVG approximation -->
      <svg viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" role="img" aria-label="KCC vector approximation">
        <rect width="100%" height="100%" fill="none"/>

        <!-- Big letters (using a bold condensed feel via paths/text) -->
        <defs>
          <style>
            .initials { fill: #e08020; font-family: 'Anton', Arial, sans-serif; font-weight:700; }
            .sub { fill: #e0e0e0; font-family: 'Anton', Arial, sans-serif; font-weight:700; }
            .ladder, .person, .trophy { fill: #ffffff; stroke: #ffffff; stroke-linecap:round; stroke-linejoin:round; }
          </style>
        </defs>

        <!-- Left 'K' (text because Anton-like) -->
        <text x="40" y="430" font-size="520" class="initials">K</text>

        <!-- Two 'C's to the right -->
        <text x="360" y="430" font-size="520" class="initials">C</text>
        <text x="680" y="430" font-size="520" class="initials">C</text>

        <!-- Ladder group rotated to match the photo -->
        <g transform="translate(265,165) rotate(-18 170 170)">
          <line x1="60" y1="30" x2="360" y2="490" stroke="#fff" stroke-width="18" stroke-linecap="round"/>
          <line x1="115" y1="30" x2="415" y2="490" stroke="#fff" stroke-width="18" stroke-linecap="round"/>
          <!-- rungs -->
          <g stroke="#fff" stroke-width="14" stroke-linecap="round">
            <line x1="85" y1="100" x2="390" y2="100"/>
            <line x1="75" y1="180" x2="380" y2="180"/>
            <line x1="70" y1="260" x2="370" y2="260"/>
            <line x1="70" y1="340" x2="370" y2="340"/>
            <line x1="75" y1="420" x2="380" y2="420"/>
            <line x1="85" y1="500" x2="390" y2="500"/>
          </g>
          <line x1="-10" y1="520" x2="120" y2="520" stroke="#fff" stroke-width="20" stroke-linecap="round"/>
        </g>

        <!-- Person on ladder -->
        <g transform="translate(265,165) rotate(-18 170 170)">
          <g transform="translate(230,170) scale(0.85)">
            <circle cx="0" cy="-40" r="28" fill="#fff"/>
            <path d="M-12,-12 Q0,8 18,36 L6,48 Q-6,28 -22,10 Z" fill="#fff"/>
            <path d="M12,-6 Q28,-20 44,-46" stroke="#fff" stroke-width="10" fill="none" stroke-linecap="round"/>
          </g>
        </g>

        <!-- Trophy -->
        <g transform="translate(520,110) scale(1.0)">
          <path d="M-28,72 L28,72 L28,60 Q18,52 12,44 L-12,44 Q-18,52 -28,60 Z" fill="#fff"/>
          <path d="M-62,40 Q-62,0 -16,-2 L16,-2 Q62,0 62,40 Q62,68 28,68 L-28,68 Q-62,68 -62,40 Z" fill="#fff"/>
          <path d="M-62,16 Q-84,0 -84,-10 Q-74,-4 -62,6 Z" fill="#fff"/>
          <path d="M62,16 Q84,0 84,-10 Q74,-4 62,6 Z" fill="#fff"/>
          <polygon points="-8,22 0,6 8,22 24,22 10,34 16,52 0,40 -16,52 -10,34 -24,22" fill="#fff"/>
        </g>

        <!-- subtitle -->
        <text x="70" y="770" font-size="66" class="sub">KARAN COACHING CENTRE</text>
      </svg>
    </div>
  </div>

  <div class="controls">
    <button class="btn" id="showSvg">Show SVG approx</button>
    <button class="btn" id="showPng">Show exact PNG</button>
  </div>

  <div class="note">Tip: PNG is exact pixel copy. SVG is a vector approximation you can tweak.</div>

  <script>
    const svgWrap = document.getElementById('svgWrap');
    const showSvg = document.getElementById('showSvg');
    const showPng = document.getElementById('showPng');

    showSvg.addEventListener('click', ()=> {
      svgWrap.style.display = 'flex';
      svgWrap.setAttribute('aria-hidden','false');
      document.querySelector('.exact').style.opacity = '0.06';
    });
    showPng.addEventListener('click', ()=> {
      svgWrap.style.display = 'none';
      svgWrap.setAttribute('aria-hidden','true');
      document.querySelector('.exact').style.opacity = '1';
    });
  </script>
</body>
</html>
