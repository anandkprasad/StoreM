<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' · Karan Coaching Center' : 'Karan Coaching Center' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta content="Karan Coaching Center" name="description">

  <!-- Fonts & icons -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <!-- Libraries & main CSS (keep your existing file paths) -->
  <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">

  <style>
    :root{
      --kcc-primary: #013b69;
      --kcc-accent: #2aa0ff;
      --muted: #6c757d;
    }
    body{ font-family:'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; margin:0; }
    .topbar{background:var(--kcc-primary); color:#fff;}
    .brand-badge{background:linear-gradient(135deg,var(--kcc-primary),var(--kcc-accent)); border-radius:8px; padding:6px 10px; color:#fff; font-weight:700}
    .btn-pill{border-radius:50px}
    /* Nav vertical tweaks kept compatible with theme */
    .navbar-vertical .nav-link{padding:12px 20px;border-left:4px solid transparent}
    .navbar-vertical .nav-link.active, .navbar-vertical .nav-link:hover{background:#f8f9fb;border-left-color:var(--kcc-primary)}
    @media (max-width: 991px) { #navbarCollapse { z-index:1050; } }
  </style>
</head>
<body>

  <!-- Topbar -->
  <div class="container-fluid topbar py-3">
    <div class="row align-items-center px-xl-5">
      <div class="col-lg-3 col-8 d-flex align-items-center">
        <a href="/" class="text-decoration-none d-flex align-items-center">
          <div style="display:flex;align-items:center;gap:12px;">
            <img src="/logo.png" alt="Karan Coaching Centre" width="125" height="75" loading="eager" style="object-fit:contain;">
            <div style="line-height:1;">
              <div style="font-weight:700;font-size:15px;color:#fff;">Karan Coaching Center</div>
              <small style="color:rgba(255,255,255,0.9);font-size:12px;">Coaching • Mentoring • Results</small>
            </div>
          </div>
        </a>
      </div>

      <div class="col-lg-6 col-12 mt-2 mt-lg-0">
        <form class="d-flex" action="/search" method="GET" role="search">
          <div class="input-group w-100">
            <input type="search" name="q" class="form-control" placeholder="Search (books, courses, authors...)" aria-label="Search">
            <div class="input-group-append">
              <button class="btn btn-primary btn-pill" type="submit" style="background:var(--kcc-accent);border-color:var(--kcc-accent)"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>

      <div class="col-lg-3 col-12 text-right mt-2 mt-lg-0 d-flex justify-content-end align-items-center">
        <div class="d-none d-lg-block">
          <% if (currentUser) { %>
            <a href="/dashboard" class="btn btn-outline-light btn-pill mr-2">Hi, <%= currentUser.username %></a>
            <a href="/logout" class="btn btn-light btn-pill" style="background:var(--kcc-accent);border-color:var(--kcc-accent);color:var(--kcc-primary)">Logout</a>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-pill mr-2">Login</a>
            <a href="/signup" class="btn btn-light btn-pill" style="background:var(--kcc-accent);border-color:var(--kcc-accent);color:var(--kcc-primary)">Register</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main navbar + vertical -->
  <div class="container-fluid mb-5">
    <div class="row px-xl-5">
      <div class="col-lg-3 d-none d-lg-block">
        <a class="btn shadow-none d-flex align-items-center justify-content-between" data-toggle="collapse" href="#navbar-vertical" style="height:65px;margin-top:-1px;padding:0 30px;background:var(--kcc-primary);color:#fff;">
          <h6 class="m-0">Ebook Categories <i class="fa fa-angle-down" style="color:#fff;"></i></h6>
        </a>

        <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
          <div class="navbar-nav w-100 overflow-hidden" style="height:410px">
            <a href="/" class="nav-item nav-link active">Home</a>
            <% if (currentUser) { %>
              <a href="/dashboard" class="nav-item nav-link">Welcome <%= currentUser.username %>!</a>
              <a href="/logout" class="nav-item nav-link">Logout</a>
            <% } else { %>
              <a href="/login" class="nav-item nav-link">Login</a>
              <a href="/signup" class="nav-item nav-link">Register</a>
            <% } %>
            <a href="/contact" class="nav-item nav-link">Contact Us</a>
          </div>
        </nav>
      </div>

      <div class="col-lg-9">
        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
          <a href="/" class="text-decoration-none d-block d-lg-none">
            <h1 class="m-0 h4 font-weight-bold"><span style="color:var(--kcc-accent)">K</span>aran</h1>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav mr-auto py-0">
              <a href="/" class="nav-item nav-link active">Home</a>
            </div>

            <div class="navbar-nav ml-auto">
              <% if (currentUser) { %>
                <a href="/dashboard" class="nav-item nav-link d-lg-none">Hi, <%= currentUser.username %></a>
                <a href="/logout" class="nav-item nav-link d-lg-none">Logout</a>
              <% } else { %>
                <a href="/login" class="nav-item nav-link d-lg-none">Login</a>
                <a href="/signup" class="nav-item nav-link d-lg-none">Register</a>
              <% } %>
            </div>
          </div>
        </nav>

        <!-- page content container starts here for pages to use -->
        <div class="container-fluid pt-3" style="margin-top:18px;">
