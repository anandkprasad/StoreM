<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Karan Coaching Center</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root{
          --kcc-primary: #013b69;   /* header/footer dark blue */
          --kcc-accent: #2aa0ff;    /* accent button color */
          --muted: #6c757d;
        }

        body { 
            /* subtle KCC themed background */
            background: linear-gradient(135deg, rgba(1,59,105,0.06) 0%, rgba(42,160,255,0.03) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
            font-family: 'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }

        .signup-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 12px 30px rgba(2,12,27,0.08);
            padding: 36px;
            max-width: 520px;
            width: 100%;
        }
        .signup-header {
            text-align: center;
            margin-bottom: 22px;
        }
        .signup-header h1 {
            font-size: 26px;
            color: var(--kcc-primary);
            margin-bottom: 6px;
            font-weight: 700;
        }
        .signup-header p { margin:0; color:var(--muted); }

        .form-group label {
            font-weight: 600;
            color: #444;
        }
        .btn-signup {
            background: linear-gradient(135deg, var(--kcc-accent) 0%, #1aa3ff 100%);
            border: none;
            padding: 10px 0;
            font-weight: 700;
            margin-top: 8px;
            color: #013b69;
            border-radius: 6px;
        }
        .btn-signup:hover {
            background: linear-gradient(135deg, #1aa3ff 0%, var(--kcc-accent) 100%);
            color: #012b44;
        }
        .login-link {
            text-align: center;
            margin-top: 18px;
        }
        .login-link a {
            color: var(--kcc-accent);
            text-decoration: none;
            font-weight: 700;
        }
        .login-link a:hover {
            text-decoration: underline;
        }
        .alert { margin-bottom: 18px; }

        /* small responsive tweaks */
        @media (max-width: 576px){
          .signup-container{ padding:20px; }
        }
    </style>
</head>
<body>

  <!-- Topbar Start -->
  <div class="container-fluid topbar py-3" style="background:var(--kcc-primary);">
    <div class="row align-items-center px-xl-5">
      <div class="col-lg-3 col-8 d-flex align-items-center">
        <a href="/" class="text-decoration-none d-flex align-items-center">
          <div style="display:flex;align-items:center;gap:10px;">
            <img src="/logo.png" alt="Karan Coaching Centre" width="125" height="75" loading="eager" style="object-fit:contain;">
            <div style="color:#fff;line-height:1;">
              <div style="font-weight:700;font-size:15px;">Karan Coaching Center</div>
              <small style="color:rgba(255,255,255,0.9);font-size:12px;">Coaching • Mentoring • Results</small>
            </div>
          </div>
        </a>
      </div>

      <div class="col-lg-6 col-12 mt-2 mt-lg-0">
        <form class="d-flex" action="/search" method="GET" role="search">
          <div class="input-group w-100">
            <input type="search" name="q" class="form-control" placeholder="Search (books, courses, authors...)" aria-label="Search">
            <div class="input-group-append">
              <button class="btn btn-primary btn-pill" type="submit" style="background:var(--kcc-accent);border-color:var(--kcc-accent);"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>

      <div class="col-lg-3 col-12 text-right mt-2 mt-lg-0 d-flex justify-content-end align-items-center">
        <div class="d-none d-lg-block">
          <% if (currentUser) { %>
            <a href="/dashboard" class="btn btn-outline-light btn-pill mr-2">Hi, <%= currentUser.username %></a>
            <a href="/logout" class="btn btn-light btn-pill" style="background:var(--kcc-accent);border-color:var(--kcc-accent);color:var(--kcc-primary)">Logout</a>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-pill mr-2">Login</a>
            <a href="/signup" class="btn btn-light btn-pill" style="background:var(--kcc-accent);border-color:var(--kcc-accent);color:var(--kcc-primary)">Register</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <!-- Topbar End -->

  <div class="signup-container" role="main" aria-labelledby="signup-heading">
      <div class="signup-header">
          <h1 id="signup-heading"><span style="color:var(--kcc-accent);">K</span>aran Coaching Center</h1>
          <p class="text-muted">Create your student account</p>
      </div>

      <% if (error && error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
      <% } %>

      <form method="POST" novalidate>
          <div class="form-group">
              <label for="username">Username *</label>
              <input type="text" class="form-control" id="username" name="username" required>
          </div>

          <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" class="form-control" id="name" name="name" required>
          </div>

          <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" class="form-control" id="email" name="email" required>
          </div>

          <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone">
          </div>

          <div class="form-group">
              <label for="address">Address</label>
              <input type="text" class="form-control" id="address" name="address">
          </div>

          <div class="form-group">
              <label for="password">Password *</label>
              <input type="password" class="form-control" id="password" name="password" required>
          </div>

          <div class="form-group">
              <label for="confirm-password">Confirm Password *</label>
              <input type="password" class="form-control" id="confirm-password" name="confirmPassword" required>
          </div>

          <button type="submit" class="btn btn-block btn-signup" aria-label="Create Account">Create Account</button>
      </form>

      <div class="login-link">
          Already have an account? <a href="/login">Login here</a>
      </div>
  </div>

  <!-- START: Karan Coaching Center - Footer -->
  <footer class="kcc-footer mt-5" role="contentinfo" style="background:var(--kcc-primary);color:#fff;padding-top:28px;">
    <style>
      .kcc-footer a { color: #fff; text-decoration: none; }
      .kcc-footer a:hover { color: #e6f2ff; text-decoration: underline; }
      .kcc-footer .footer-card { background: rgba(255,255,255,0.03); border-radius:8px; padding:14px; }
      .kcc-footer .brand-badge { background: linear-gradient(135deg,var(--kcc-primary),var(--kcc-accent)); color:#fff; padding:6px 10px; border-radius:8px; font-weight:700; display:inline-block; }
      .kcc-footer .small-muted { color: rgba(255,255,255,0.92); font-size:0.92rem; }
      .kcc-footer .payments-img { max-width:140px; height:auto; opacity:0.9; filter:grayscale(1) contrast(0.95); }
      @media (max-width:991px){ .kcc-footer .footer-card{ margin-bottom:12px } }
    </style>

    <div class="container-fluid px-3 px-md-5">
      <div class="row">
        <div class="col-lg-4 col-md-12 mb-3">
          <div class="footer-card">
            <a href="/" class="d-flex align-items-center mb-2" aria-label="Karan Coaching Center home">
              <img src="/logo.png" alt="Karan Coaching Center logo" width="90" height="54" style="object-fit:contain;margin-right:10px;" loading="lazy">
              <div>
                <span class="brand-badge" aria-hidden="true">KCC</span>
                <div style="margin-top:6px;font-weight:700;color:#fff;">Karan Coaching Center</div>
              </div>
            </a>
            <p class="small-muted" style="margin-top:10px;">Focused coaching for school & competitive exams — personalised classes, mock tests and mentoring.</p>
            <div class="small-muted" style="margin-top:10px;">
              <div><i class="fa fa-map-marker-alt"></i> Patna / Delhi (Branches)</div>
              <div><i class="fa fa-envelope"></i> <a href="mailto:info@karancoachingcentre.com">info@karancoachingcentre.com</a></div>
              <div><i class="fa fa-phone-alt"></i> +91 98765 43210</div>
            </div>
          </div>
        </div>

        <div class="col-lg-8 col-md-12">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="footer-card">
                <h6 style="color:#fff;margin-bottom:10px;">Quick Links</h6>
                <a href="/" class="d-block mb-1">Home</a>
                <a href="/courses" class="d-block mb-1">Courses</a>
                <a href="/contact" class="d-block">Contact</a>
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <div class="footer-card">
                <h6 style="color:#fff;margin-bottom:10px;">About</h6>
                <p class="small-muted" style="margin:0;">Experienced faculty, small batches, and results-driven training. Free demo classes for new students.</p>
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <div class="footer-card">
                <h6 style="color:#fff;margin-bottom:10px;">Newsletter</h6>
                <% if (success && success.length > 0) { %>
                  <div class="alert alert-light text-dark" role="alert"><%= success[0] %></div>
                <% } else if (error && error.length > 0) { %>
                  <div class="alert alert-danger" role="alert"><%= error[0] %></div>
                <% } %>
                <form action="/newsletter" method="POST" aria-label="Subscribe">
                  <div class="form-group mb-2"><input type="text" name="name" class="form-control" placeholder="Your Name" style="border-radius:6px;"></div>
                  <div class="form-group mb-2"><input type="email" name="email" class="form-control" placeholder="Your Email" required style="border-radius:6px;"></div>
                  <button class="btn" type="submit" style="background:var(--kcc-accent);color:var(--kcc-primary);font-weight:700;border-radius:6px;border:none;">Subscribe</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row align-items-center mt-3 pt-3" style="border-top:1px solid rgba(255,255,255,0.08);">
        <div class="col-md-6 text-left" style="color:rgba(255,255,255,0.9);font-size:.9rem;">&copy; <span id="kccYear">2025</span> <strong>Karan Coaching Center</strong>. All Rights Reserved.</div>
        <div class="col-md-6 text-right"><img src="/img/payments.png" alt="payments" class="payments-img" loading="lazy"></div>
      </div>
    </div>

    <script> (function(){ var el=document.getElementById('kccYear'); if(el) el.textContent=new Date().getFullYear(); })(); </script>
  </footer>
  <!-- END: Karan Coaching Center - Footer -->

  <!-- JS (kept as in original file) -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
  <script>
      // Basic password validation (unchanged)
      $('form').on('submit', function(e) {
          const password = $('#password').val();
          const confirmPassword = $('#confirm-password').val();
          
          if (password !== confirmPassword) {
              e.preventDefault();
              alert('Passwords do not match!');
              return false;
          }
      });
  </script>
</body>
</html>
