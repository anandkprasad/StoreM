<%- include('./partials/header') %>

<style>
  /* Admin-specific styles */
  body { 
    background:#f8f9fa; 
  }

  .admin-header { 
    display:flex; 
    align-items:center; 
    justify-content:space-between; 
    gap:16px; 
    margin:18px 0; 
  }
  .admin-title { 
    font-weight:800; 
    font-size:1.25rem; 
    margin:0; 
  }
  .muted { 
    color:#6c757d; 
  }

  .card-admin { 
    border-radius:14px; 
    box-shadow:0 6px 20px rgba(10,20,40,0.04); 
    overflow:hidden; 
    background:#fff; 
  }
  .item-image { 
    width:100px; 
    height:80px; 
    object-fit:cover; 
    border-radius:6px; 
  }

  .table thead th { 
    background: #fbfdff; 
    border-bottom: 1px solid rgba(0,0,0,0.06); 
  }
  .btn-sm { 
    padding:6px 10px; 
    font-size:13px; 
  }

  @media (max-width: 991px) {
    .item-image { 
      width:72px; 
      height:58px; 
    }
    .admin-header { 
      flex-direction:column; 
      align-items:flex-start; 
      gap:10px; 
    }
  }
</style>

<!-- Admin content -->
<div class="card-admin p-4 mb-4">
  <!-- Order Analytics (styled + chart + summaries) -->
  <% if (typeof orderAnalytics !== 'undefined') { %>
    <div class="card-admin p-4 mb-4" style="background:#f7f8fa;">
      <div class="d-flex align-items-start justify-content-between mb-3">
        <div>
          <h3 class="mb-1">Order Analytics</h3>
          <div class="muted">Overview of recent orders and product-level revenue & cost</div>
        </div>
        <div class="text-right">
          <div style="font-size:0.95rem;color:#333;"><strong>Total orders:</strong> <%= orderAnalytics.totalOrders || (orderAnalytics.orders && orderAnalytics.orders.length) || 0 %></div>
          <div style="font-size:0.95rem;color:#333;"><strong>Unique customers:</strong> <%= orderAnalytics.uniqueCustomers || '—' %></div>
        </div>
      </div>

      <div class="row">
        <!-- Chart column -->
        <div class="col-lg-8 mb-3">
          <div style="background:#fff;border-radius:12px;padding:12px;box-shadow:0 6px 18px rgba(10,20,40,0.04);">
            <canvas id="ordersChart" height="260" aria-label="Revenue vs Cost per product chart"></canvas>
          </div>
        </div>

        <!-- Summary column -->
        <div class="col-lg-4">
          <div style="background:#fff;border-radius:12px;padding:12px;box-shadow:0 6px 18px rgba(10,20,40,0.04);">
            <h5 class="mb-2">Totals</h5>
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <div class="muted">Total Revenue</div>
                <div><strong id="totalRevenue">₹ <%= orderAnalytics.totalRevenue ? orderAnalytics.totalRevenue.toFixed(2) : 0 %></strong></div>
              </div>
              <div class="d-flex justify-content-between mt-1">
                <div class="muted">Total Cost</div>
                <div><strong id="totalCost">₹ <%= orderAnalytics.totalCost ? orderAnalytics.totalCost.toFixed(2) : 0 %></strong></div>
              </div>
              <div class="d-flex justify-content-between mt-1">
                <div class="muted">Gross Profit</div>
                <div><strong id="grossProfit">₹ <%= orderAnalytics.grossProfit ? orderAnalytics.grossProfit.toFixed(2) : 0 %></strong></div>
              </div>
            </div>

            <h6 class="mb-2">Top products</h6>
            <div id="topProducts" style="max-height:300px;overflow:auto;"></div>
          </div>
        </div>
      </div>

      <!-- Raw table (optional) -->
      <div class="table-responsive mt-4">
        <table class="table table-bordered table-sm">
          <thead>
            <tr>
              <th>User</th>
              <th>Email</th>
              <th>Order ID</th>
              <th>Product</th>
              <th>Amount</th>
              <th>Cost</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% (orderAnalytics.orders || []).forEach(function(order) { %>
              <tr>
                <td><%= order.userName || order.user || '—' %></td>
                <td><%= order.userEmail || order.email || '—' %></td>
                <td><%= order._id || order.orderId || '—' %></td>
                <td><%= order.productName || (order.product && order.product.name) || '—' %></td>
                <td>₹ <%= (order.amount || order.total || order.price || (order.product && order.product.price) || 0) %></td>
                <td>₹ <%= (order.cost || order.productCost || (order.product && order.product.cost) || 0) %></td>
                <td><%= order.date || order.createdAt || '—' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script id="orders-data" type="application/json">
    <%- JSON.stringify(orderAnalytics.orders || []) %>
    </script>

    <!-- Chart.js (CDN) and aggregation script -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      (function(){
        // server-side data (safe JSON)
        const orders = JSON.parse(document.getElementById("orders-data").textContent);

        // Aggregate per product
        const productMap = {}; // name -> { revenue, cost, count }
        let totalRevenue = 0;
        let totalCost = 0;

        orders.forEach(o => {
          const name = (o.productName || (o.product && o.product.name) || 'Unknown Product').toString();
          // fallbacks for revenue and cost
          const revenue = Number(o.amount || o.total || o.price || (o.product && o.product.price) || 0) || 0;
          const cost = Number(o.cost || o.productCost || (o.product && o.product.cost) || 0) || 0;

          totalRevenue += revenue;
          totalCost += cost;

          if (!productMap[name]) productMap[name] = { revenue: 0, cost: 0, count: 0 };
          productMap[name].revenue += revenue;
          productMap[name].cost += cost;
          productMap[name].count += 1;
        });

        // Prepare arrays for chart (sorted by revenue desc)
        const products = Object.keys(productMap).map(name => ({ name, ...productMap[name] }));
        products.sort((a,b) => b.revenue - a.revenue);

        const labels = products.map(p => p.name);
        const revenueData = products.map(p => Number(p.revenue.toFixed(2)));
        const costData = products.map(p => Number(p.cost.toFixed(2)));

        // Fill top products list
        const topProductsEl = document.getElementById('topProducts');
        if (products.length === 0) {
          topProductsEl.innerHTML = '<div class="muted small">No product sales yet.</div>';
        } else {
          topProductsEl.innerHTML = products.slice(0,8).map(p => {
            const profit = p.revenue - p.cost;
            return '<div style="padding:6px 0;border-bottom:1px solid #f1f4fb;">' +
              '<div style="font-weight:700;">' + p.name + '</div>' +
              '<div class="muted small">Sold: ' + p.count + ' — Revenue: ₹ ' + p.revenue.toFixed(2) + ' — Cost: ₹ ' + p.cost.toFixed(2) + ' — Profit: ₹ ' + profit.toFixed(2) + '</div>' +
              '</div>';
          }).join('');
        }

        // Populate totals
        document.getElementById('totalRevenue').textContent = '₹ ' + totalRevenue.toFixed(2);
        document.getElementById('totalCost').textContent = '₹ ' + totalCost.toFixed(2);
        document.getElementById('grossProfit').textContent = '₹ ' + (totalRevenue - totalCost).toFixed(2);

        // Render Chart.js — revenue vs cost per product (stacked bars disabled, two bars)
        const ctx = document.getElementById('ordersChart').getContext('2d');
        // destroy existing chart if re-rendering
        if (window._ordersChart) { window._ordersChart.destroy(); }

        window._ordersChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Revenue',
                data: revenueData,
                backgroundColor: 'rgba(102,126,234,0.85)',
                borderRadius: 6,
              },
              {
                label: 'Cost',
                data: costData,
                backgroundColor: 'rgba(118,75,162,0.65)',
                borderRadius: 6,
              }
            ]
          },
          options: {
            maintainAspectRatio: false,
            responsive: true,
            interaction: { mode: 'index', intersect: false },
            plugins: {
              legend: { position: 'top' },
              tooltip: {
                callbacks: {
                  label: function(ctx) {
                    return ctx.dataset.label + ': ₹ ' + Number(ctx.parsed.y || ctx.parsed).toFixed(2);
                  }
                }
              }
            },
            scales: {
              x: {
                ticks: { maxRotation: 40, minRotation: 0 },
                grid: { display: false }
              },
              y: {
                beginAtZero: true,
                ticks: {
                  callback: function(value) { return '₹ ' + Number(value).toFixed(0); }
                }
              }
            }
          }
        });
      })();
    </script>
  <% } %>

  <div class="admin-header">
    <div>
      <h2 class="admin-title">Manage Store Items</h2>
      <div class="muted">Add, edit or remove ebooks from your store</div>
    </div>

    <div style="display:flex;gap:12px;align-items:center;">
      <a href="/" class="btn btn-outline-secondary">Back to Store</a>
      <a href="/admin/add" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Item
      </a>
    </div>
  </div>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success[0] %></div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error[0] %></div>
  <% } %>

  <% if (!items || items.length === 0) { %>
    <div class="alert alert-info">No items found. <a href="/admin/add">Add your first item</a></div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th style="width:120px">Image</th>
            <th>Name</th>
            <th style="max-width:34%">Description</th>
            <th style="width:110px">Price</th>
            <th style="width:220px">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item) { %>
            <tr>
              <td>
                <% if (item.image_url) { %>
                  <img src="<%= item.image_url %>" alt="<%= item.name %>" class="item-image">
                <% } else { %>
                  <div class="text-muted">No image</div>
                <% } %>
              </td>
              <td>
                <strong><%= item.name %></strong>
                <% if (item.category) { %>
                  <div class="muted small"><%= item.category %></div>
                <% } %>
              </td>
              <td style="max-width:420px;">
                <%= (item.description || '').length > 160 ? (item.description.substring(0,160) + '...') : (item.description || '-') %>
              </td>
              <td>
                <strong>₹ <%= Number(item.price).toFixed(2) %></strong>
              </td>
              <td>
                <a href="/admin/edit/<%= item._id %>" class="btn btn-sm btn-outline-warning">
                  <i class="fas fa-edit"></i> Edit
                </a>

                <form action="/admin/delete/<%= item._id %>" method="GET" style="display:inline;" onsubmit="return confirm('Delete this item? This action cannot be undone.')">
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>

                <a href="/product/<%= item._id %>" class="btn btn-sm btn-outline-primary" target="_blank" rel="noopener">
                  <i class="fas fa-eye"></i> View
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<!-- small help / tip -->
<div class="muted small mb-5">Tip: Click <strong>Edit</strong> to update file links (PDF/ePub), categories, or set items as <em>digital</em> for instant delivery.</div>

<%- include('./partials/footer') %>