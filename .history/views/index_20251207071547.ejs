          <a href="/" class="nav-item nav-link active">Home</a>

          <% if (currentUser) { %>
            <a href="/dashboard" class="nav-item nav-link">Welcome <%= currentUser.username %>!</a>
            <a href="/logout" class="nav-item nav-link">Logout</a>
          <% } else { %>
            <a href="/login" class="nav-item nav-link">Login</a>
            <a href="/signup" class="nav-item nav-link">Register</a>
          <% } %>
          <a href="/contact" class="nav-item nav-link">Contact Us</a>
        </div>
      </nav>
    </div>

    <div class="col-lg-9">
      <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
        <a href="/" class="text-decoration-none d-block d-lg-none">
          <h1 class="m-0 h4 font-weight-bold"><span class="text-primary">E</span>Shopper</h1>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
          <div class="navbar-nav mr-auto py-0">
            <a href="/" class="nav-item nav-link active">Home</a>
            <a href="/shop" class="nav-item nav-link">Shop</a>
            <a href="/about" class="nav-item nav-link">About</a>
            <a href="/contact" class="nav-item nav-link">Contact</a>
          </div>
          <div class="ml-auto d-none d-lg-flex align-items-center">
            <a href="#" class="text-dark px-2">Help</a>
            <a href="#" class="text-dark px-2">Track Order</a>
          </div>
        </div>
      </nav>

      <!-- Amazon-style product list -->
      <div class="container-fluid pt-3" style="margin-top: 18px;">
        <style>
          /* Scoped: amazon-like product list */
          .amazon-cards .product-row { padding: 14px 0; border-bottom: 1px solid rgba(0,0,0,0.06); }
          .amazon-cards .product-card { display:flex; gap:20px; align-items:flex-start; width:100%; }
          .amazon-cards .product-thumb { width:160px; min-width:160px; height:160px; background:#fff; display:flex; align-items:center; justify-content:center; border-radius:8px; box-shadow:0 6px 18px rgba(10,20,40,0.04); overflow:hidden; }
          .amazon-cards .product-thumb img { width:100%; height:100%; object-fit:cover; }
          .amazon-cards .product-info { flex:1; min-width:0; }
          .amazon-cards h5 { margin:0 0 6px 0; font-size:1.02rem; font-weight:600; line-height:1.25; color:#212529; }
          .amazon-cards .byline { font-size:0.9rem; color:#6c757d; margin-bottom:8px; display:block; }
          .amazon-cards .desc { color:#495057; font-size:0.95rem; margin-bottom:10px; display:block; max-height:3.1rem; overflow:hidden; text-overflow:ellipsis; }
          .amazon-cards .meta { display:flex; align-items:center; gap:12px; font-size:0.9rem; color:#6c757d; margin-bottom:8px; }
          .amazon-cards .rating i { color:#f6b01e; margin-right:3px; font-size:0.95rem; }
          .amazon-cards .price-wrap { display:flex; align-items:baseline; gap:10px; margin-bottom:6px; }
          .amazon-cards .price { font-size:1.18rem; font-weight:700; color:#111; }
          .amazon-cards .price-old { text-decoration:line-through; color:#9aa0a6; font-size:0.95rem; }
          .amazon-cards .prime-badge { background:#232f3e; color:#fff; padding:4px 8px; border-radius:4px; font-size:0.82rem; font-weight:700; }
          .amazon-cards .actions { display:flex; align-items:center; gap:10px; margin-left:auto; }
          .amazon-cards .btn-buy { min-width:120px; }
          @media (max-width: 991px) {
            .amazon-cards .product-card { flex-direction:column; align-items:center; text-align:center; }
            .amazon-cards .product-thumb { width:220px; min-width:220px; height:220px; margin-bottom:12px; }
            .amazon-cards .actions { width:100%; justify-content:center; margin-top:8px; }
            .amazon-cards .product-info { width:100%; }
          }
        </style>

        <div class="amazon-cards">
          <% featuredItems.forEach(function(item) { %>
            <div class="row product-row">
              <div class="col-12">
                <div class="product-card">

                  <!-- thumb -->
                  <div class="product-thumb">
                    <img loading="lazy" src="<%= item.image_url || '/img/product-1.jpg' %>" alt="<%= item.name %>">
                  </div>

                  <!-- info -->
                  <div class="product-info">
                    <h5><a href="/product/<%= item._id %>" class="text-dark" style="text-decoration:none;"><%= item.name %></a></h5>
                    <% if (item.author) { %>
                      <span class="byline">by <strong><%= item.author %></strong></span>
                    <% } %>

                    <div class="desc">
                      <% let words = (item.description || '').split(/\s+/); %>
                      <%= words.slice(0, 28).join(' ') %><%= words.length > 28 ? '...' : '' %>
                    </div>

                    <div class="meta">
                      <div class="rating" title="<%= item.rating || 4.6 %>">
                        <% let rating = Math.round(((item.rating || 4.6) * 2)) / 2; %>
                        <% for (let i = 1; i <= 5; i++) { %>
                          <% if (i <= Math.floor(rating)) { %>
                            <i class="fas fa-star"></i>
                          <% } else if (i === Math.ceil(rating) && rating % 1 !== 0) { %>
                            <i class="fas fa-star-half-alt"></i>
                          <% } else { %>
                            <i class="far fa-star" style="color:#d6d6d6"></i>
                          <% } %>
                        <% } %>
                      </div>
                      <div><small><%= item.reviews_count || 12 %> reviews</small></div>
                      <% if (item.category) { %>
                        <div><small class="badge badge-light"><%= item.category %></small></div>
                      <% } %>
                    </div>

                    <div class="price-wrap d-flex align-items-center">
                      <div class="price-wrap-inner">
                        <div class="price">₹ <%= item.price %></div>
                        <% if (item.original_price && item.original_price > item.price) { %>
                          <div class="price-old">₹ <%= item.original_price %></div>
                        <% } %>
                      </div>

                      <% if (item.isPrime) { %>
                        <div style="margin-left:12px;">
                          <span class="prime-badge">PRIME</span>
                        </div>
                      <% } %>
                    </div>
                  </div>

                  <!-- actions -->
                  <div class="actions d-flex">
                    <a href="/product/<%= item._id %>" class="btn btn-outline-secondary btn-sm">View</a>

                    <!-- push Buy to right with ml-auto when parent is flex (desktop) -->
                    <div class="ml-auto d-none d-md-block">
                      <a href="/product/<%= item._id %>" class="btn btn-primary btn-sm btn-buy">
                        <i class="fas fa-shopping-cart mr-1"></i>Buy Now
                      </a>
                    </div>

                    <!-- on small screens show full width buy -->
                    <div class="d-block d-md-none w-100 mt-2">
                      <a href="/product/<%= item._id %>" class="btn btn-primary btn-block">
                        <i class="fas fa-shopping-cart mr-1"></i>Buy Now
                      </a>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
      <!-- End amazon-style list -->

    </div>
  </div>
</div>
<!-- Navbar End -->


  <!-- Featured Blocks -->
  <div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
      <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="d-flex align-items-center border mb-4 p-4 rounded" style="background:#fff;box-shadow:0 6px 20px rgba(21,30,60,0.04)">
          <i class="fa fa-check text-primary mr-3 fa-2x"></i>
          <div>
            <h6 class="m-0 font-weight-bold">Quality Product</h6>
            <small class="text-muted">Handpicked ebooks</small>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="d-flex align-items-center border mb-4 p-4 rounded" style="background:#fff;box-shadow:0 6px 20px rgba(21,30,60,0.04)">
          <i class="fa fa-shipping-fast text-primary mr-3 fa-2x"></i>
          <div>
            <h6 class="m-0 font-weight-bold">Instant Delivery</h6>
            <small class="text-muted">Download after purchase</small>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="d-flex align-items-center border mb-4 p-4 rounded" style="background:#fff;box-shadow:0 6px 20px rgba(21,30,60,0.04)">
          <i class="fas fa-exchange-alt text-primary mr-3 fa-2x"></i>
          <div>
            <h6 class="m-0 font-weight-bold">14-Day Return</h6>
            <small class="text-muted">Easy refunds & support</small>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="d-flex align-items-center border mb-4 p-4 rounded" style="background:#fff;box-shadow:0 6px 20px rgba(21,30,60,0.04)">
          <i class="fa fa-phone-volume text-primary mr-3 fa-2x"></i>
          <div>
            <h6 class="m-0 font-weight-bold">24/7 Support</h6>
            <small class="text-muted">We're here to help</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Subscribe -->
  <div class="container-fluid bg-secondary my-5">
    <div class="row justify-content-md-center py-5 px-xl-5">
      <div class="col-md-6 col-12 py-5">
        <div class="text-center mb-2 pb-2">
          <h2 class="section-title px-5 mb-3"><span class="bg-secondary px-2">Stay Updated</span></h2>
          <p class="text-muted">Get curated recommendations, new releases and exclusive discounts in your inbox.</p>
        </div>
        <form action="" class="d-flex">
          <div class="input-group">
            <input type="email" class="form-control border-white p-3" placeholder="Email Goes Here" aria-label="Email">
            <div class="input-group-append">
              <button class="btn btn-primary btn-pill px-4" type="submit">Subscribe</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Products Grid (professional shop items with large BUY NOW) -->
<div class="container-fluid pt-5 shop-grid">
  <div class="text-center mb-4">
    <h2 class="section-title px-5"><span class="px-2">Shop Now</span></h2>
  </div>

  <style>
    /* Scoped styles for shop-grid */
    .shop-grid .item-row { padding: 18px 0; border-bottom: 1px solid rgba(0,0,0,0.05); }
    .shop-grid .product-card { display:flex; gap:20px; align-items:stretch; width:100%; }
    .shop-grid .thumb {
      width:240px; min-width:240px; height:240px; border-radius:12px; overflow:hidden;
      display:flex; align-items:center; justify-content:center; background:linear-gradient(180deg,#fff,#fbfdff);
      box-shadow: 0 10px 30px rgba(13,24,48,0.06);
    }
    .shop-grid .thumb img { width:100%; height:100%; object-fit:cover; display:block; }
    .shop-grid .info { flex:1; display:flex; flex-direction:column; min-width:0; }
    .shop-grid .title { font-size:1.06rem; font-weight:600; color:#1f2937; margin-bottom:6px; line-height:1.25; }
    .shop-grid .byline { color:#6b7280; font-size:.9rem; margin-bottom:8px; display:block; }
    .shop-grid .desc { color:#495057; font-size:.95rem; margin-bottom:10px; max-height:3.4rem; overflow:hidden; text-overflow:ellipsis; }
    .shop-grid .meta { display:flex; gap:12px; align-items:center; color:#6b7280; font-size:.9rem; margin-bottom:8px; }
    .shop-grid .rating i { color:#f6b01e; margin-right:3px; }
    .shop-grid .price-row { display:flex; align-items:baseline; gap:12px; margin-bottom:8px; }
    .shop-grid .price { font-size:1.25rem; font-weight:800; color:#111827; }
    .shop-grid .price-old { font-size:.95rem; text-decoration:line-through; color:#9aa0a6; }
    .shop-grid .discount { color:#16a34a; font-weight:700; font-size:.92rem; }
    .shop-grid .tag { background:#eef2ff; color:#3741b6; padding:6px 10px; border-radius:8px; font-weight:700; font-size:.8rem; }
    .shop-grid .actions { display:flex; align-items:center; gap:10px; margin-left:auto; }
    .shop-grid .btn-buy {
      min-width:160px;
      padding:12px 18px;
      font-size:0.98rem;
      border-radius:12px;
      box-shadow: 0 8px 24px rgba(15,40,80,0.08);
    }
    .shop-grid .btn-add { padding:8px 12px; border-radius:10px; }

    /* Hover lift for card */
    .shop-grid .product-card:hover .thumb { transform: scale(1.02); transition: transform .28s ease; }
    .shop-grid .product-card { transition: transform .18s ease, box-shadow .18s ease; }
    .shop-grid .product-card:hover { transform: translateY(-6px); }

    @media (max-width: 991px) {
      .shop-grid .product-card { flex-direction:column; align-items:center; text-align:center; }
      .shop-grid .thumb { width:220px; min-width:220px; height:220px; margin-bottom:12px; }
      .shop-grid .actions { width:100%; justify-content:center; margin-top:8px; }
      .shop-grid .actions .btn-buy { min-width:100%; }
      .shop-grid .info { width:100%; }
    }
  </style>

  <div class="row px-xl-5 pb-3">
    <% (featuredItems.concat(otherItems)).forEach(function(item) { %>
      <div class="col-12 item-row d-flex align-items-stretch">
        <div class="product-card w-100">

          <!-- Thumbnail -->
          <div class="thumb" aria-hidden="true">
            <img loading="lazy" src="<%= item.image_url || '/img/product-1.jpg' %>" alt="<%= item.name %>">
          </div>

          <!-- Info -->
          <div class="info px-2 px-md-3">
            <a href="/product/<%= item._id %>" class="title" style="text-decoration:none;color:inherit;">
              <%= item.name %>
            </a>

            <% if (item.author) { %>
              <span class="byline">by <strong><%= item.author %></strong></span>
            <% } %>

            <p class="desc mb-0">
              <% let words = (item.description || '').split(/\s+/); %>
              <%= words.slice(0, 28).join(' ') %><%= words.length > 28 ? '...' : '' %>
            </p>

            <div class="meta mt-2">
              <div class="rating" title="<%= item.rating || 4.6 %>">
                <% let rating = Math.round(((item.rating || 4.6) * 2)) / 2; %>
                <% for (let i = 1; i <= 5; i++) { %>
                  <% if (i <= Math.floor(rating)) { %>
                    <i class="fas fa-star"></i>
                  <% } else if (i === Math.ceil(rating) && rating % 1 !== 0) { %>
                    <i class="fas fa-star-half-alt"></i>
                  <% } else { %>
                    <i class="far fa-star" style="color:#d6d6d6"></i>
                  <% } %>
                <% } %>
              </div>

              <div><small><%= item.reviews_count || 12 %> reviews</small></div>

              <% if (item.category) { %>
                <div><span class="tag"><%= item.category %></span></div>
              <% } %>
            </div>

            <div class="price-row mt-2">
              <div>
                <div class="price">₹ <%= item.price %></div>
                <% if (item.original_price && item.original_price > item.price) { %>
                  <div class="price-old">₹ <%= item.original_price %></div>
                <% } %>
              </div>

              <% if (item.original_price && item.original_price > item.price) { %>
                <div class="discount ml-2">
                  (<%= Math.round((1 - item.price/item.original_price) * 100) %>% off)
                </div>
              <% } %>
            </div>
          </div>

          <!-- Actions (Buy Now pushed right on desktop) -->
          <div class="actions d-flex align-items-center">
            <a href="/product/<%= item._id %>" class="btn btn-outline-secondary btn-add d-none d-md-inline">View</a>

            <!-- Big BUY NOW -->
            <div class="ml-auto">
              <a href="/product/<%= item._id %>" class="btn btn-primary btn-buy" role="button" aria-label="Buy <%= item.name %> now">
                <i class="fas fa-shopping-cart mr-2"></i>BUY NOW
              </a>
            </div>

            <!-- On small screens show compact actions centred -->
            <div class="d-block d-md-none w-100 mt-2">
              <a href="/product/<%= item._id %>" class="btn btn-primary btn-block">
                <i class="fas fa-shopping-cart mr-2"></i>BUY NOW
              </a>
            </div>
          </div>

        </div>
      </div>
    <% }); %>
  </div>
</div>
<!-- End Products Grid -->



  <!-- Footer -->
  <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
    <div class="row px-xl-5 pt-5">
      <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
        <a href="/" class="text-decoration-none d-flex align-items-center">
          <span class="brand-badge mr-3">E</span>
          <h3 class="m-0">EBookStore</h3>
        </a>
        <p class="mt-3 text-muted">Curated ebooks for enthusiasts, students and professionals. High-quality content delivered instantly.</p>
        <p class="mb-2 text-muted"><i class="fa fa-map-marker-alt text-primary mr-2"></i>123 Street, New York, USA</p>
        <p class="mb-2 text-muted"><i class="fa fa-envelope text-primary mr-2"></i>info@example.com</p>
