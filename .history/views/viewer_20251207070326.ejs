<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Page <%= currentPage %> of <%= totalPages %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            user-select: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
        }
        
        body {
            background: #000;
            margin: 0;
            padding: 0;
            overflow: hidden;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .viewer-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }
        
        .page-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            pointer-events: none;
        }
        
        .navigation {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.8);
            padding: 15px 30px;
            border-radius: 50px;
            display: flex;
            align-items: center;
            gap: 20px;
            z-index: 1000;
        }
        
        .nav-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s;
        }
        
        .nav-btn:hover {
            background: #764ba2;
        }
        
        .nav-btn:disabled {
            background: #555;
            cursor: not-allowed;
            opacity: 0.5;
        }
        
        .page-info {
            color: white;
            font-size: 16px;
            margin: 0 10px;
        }
        
        .header {
            background: rgba(0, 0, 0, 0.9);
            padding: 15px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
        }
        
        .header h4 {
            margin: 0;
            font-size: 18px;
        }
        
        .close-btn {
            background: transparent;
            border: 1px solid white;
            color: white;
            padding: 8px 20px;
            border-radius: 20px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .close-btn:hover {
            background: white;
            color: black;
            text-decoration: none;
        }
        
        /* Disable text selection */
        img {
            -webkit-user-drag: none;
            -khtml-user-drag: none;
            -moz-user-drag: none;
            -o-user-drag: none;
            user-drag: none;
        }
    </style>
</head>
<body>
    <div class="header">
        <h4><%= product.name %> - Page <%= currentPage %> of <%= totalPages %></h4>
        <a href="/dashboard" class="close-btn">Close</a>
    </div>
    
    <div class="viewer-container">
        <img src="<%= imageUrl %>" alt="Page <%= currentPage %>" class="page-image" id="pageImage">
    </div>
    
    <div class="navigation">
        <button class="nav-btn" id="prevBtn" <%= currentPage === 1 ? 'disabled' : '' %>>
            <i class="fas fa-chevron-left"></i> Previous
        </button>
        <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
        <button class="nav-btn" id="nextBtn" <%= currentPage === totalPages ? 'disabled' : '' %>>
            Next <i class="fas fa-chevron-right"></i>
        </button>
    </div>

    <script>
        // Disable right-click
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
            return false;
        });
        // Disable F12, Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+U, Ctrl+S, Ctrl+P
        document.addEventListener('keydown', function(e) {
            if (
                e.keyCode === 123 || // F12
                (e.ctrlKey && e.shiftKey && e.keyCode === 73) || // Ctrl+Shift+I
                (e.ctrlKey && e.shiftKey && e.keyCode === 74) || // Ctrl+Shift+J
                (e.ctrlKey && e.keyCode === 85) || // Ctrl+U
                (e.ctrlKey && e.keyCode === 83) || // Ctrl+S
                (e.ctrlKey && e.keyCode === 80)   // Ctrl+P
            ) {
                e.preventDefault();
                return false;
            }
        });
        document.onselectstart = function() { return false; };
        document.ondragstart = function() { return false; };
        // Navigation handling
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const currentPage = <%= currentPage %>;
        const totalPages = <%= totalPages %>;
        const orderId = '<%= orderId %>';
        const token = '<%= token %>';
        prevBtn.addEventListener('click', function() {
            let prev = currentPage - 1;
            if (prev >= 1) {
                window.location.href = `/notes/${orderId}/page/${prev}?token=${token}`;
            }
        });
        nextBtn.addEventListener('click', function() {
            let next = currentPage + 1;
            if (next <= totalPages) {
                window.location.href = `/notes/${orderId}/page/${next}?token=${token}`;
            }
        });
        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            // Left arrow
            if (e.keyCode === 37 && currentPage > 1) {
                window.location.href = `/notes/${orderId}/page/${currentPage - 1}?token=${token}`;
            }
            // Right arrow
            if (e.keyCode === 39 && currentPage < totalPages) {
                window.location.href = `/notes/${orderId}/page/${currentPage + 1}?token=${token}`;
            }
        });
        // Prevent image saving/drag
        document.addEventListener('DOMContentLoaded', function() {
            const img = document.getElementById('pageImage');
            img.addEventListener('dragstart', function(e) {
                e.preventDefault();
            });
        });
        // Disable console
        (function() {
            const noop = function() {};
            const methods = ['log', 'debug', 'info', 'warn', 'error', 'assert', 'dir', 'dirxml', 'group', 'groupEnd', 'time', 'timeEnd', 'count', 'trace', 'profile', 'profileEnd'];
            for (let i = 0; i < methods.length; i++) {
                console[methods[i]] = noop;
            }
        })();
    </script>
</body>
</html>


