            </div>
            <div class="d-flex justify-content-between mt-1">
              <div class="muted">Total Cost</div>
              <div><strong id="totalCost">₹ <%= orderAnalytics.totalCost ? orderAnalytics.totalCost.toFixed(2) : 0 %></strong></div>
            </div>
            <div class="d-flex justify-content-between mt-1">
              <div class="muted">Gross Profit</div>
              <div><strong id="grossProfit">₹ <%= orderAnalytics.grossProfit ? orderAnalytics.grossProfit.toFixed(2) : 0 %></strong></div>
            </div>
          </div>

          <h6 class="mb-2">Top products</h6>
          <div id="topProducts" style="max-height:300px;overflow:auto;"></div>
        </div>
      </div>
    </div>

    <!-- Raw table (optional) -->
    <div class="table-responsive mt-4">
