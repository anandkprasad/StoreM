        <thead>
          <tr>
            <th>User</th>
            <th>Email</th>
            <th>Order ID</th>
            <th>Product</th>
            <th>Amount</th>
            <th>Cost</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% (orderAnalytics.orders || []).forEach(function(order) { %>
            <tr>
              <td><%= order.userName || order.user || '—' %></td>
              <td><%= order.userEmail || order.email || '—' %></td>
              <td><%= order._id || order.orderId || '—' %></td>
              <td><%= order.productName || (order.product && order.product.name) || '—' %></td>
              <td>₹ <%= (order.amount || order.total || order.price || (order.product && order.product.price) || 0) %></td>
              <td>₹ <%= (order.cost || order.productCost || (order.product && order.product.cost) || 0) %></td>
              <td><%= order.date || order.createdAt || '—' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script id="orders-data" type="application/json">
  <%- JSON.stringify(orderAnalytics.orders || []) %>
</script>


  <!-- Chart.js (CDN) and aggregation script -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    (function(){
      // server-side data (safe JSON)
   
        const orders = JSON.parse(document.getElementById("orders-data").textContent);


      // Aggregate per product
      const productMap = {}; // name -> { revenue, cost, count }
      let totalRevenue = 0;
      let totalCost = 0;

      orders.forEach(o => {
        const name = (o.productName || (o.product && o.product.name) || 'Unknown Product').toString();
        // fallbacks for revenue and cost
        const revenue = Number(o.amount || o.total || o.price || (o.product && o.product.price) || 0) || 0;
        const cost = Number(o.cost || o.productCost || (o.product && o.product.cost) || 0) || 0;

        totalRevenue += revenue;
        totalCost += cost;

        if (!productMap[name]) productMap[name] = { revenue: 0, cost: 0, count: 0 };
        productMap[name].revenue += revenue;
        productMap[name].cost += cost;
        productMap[name].count += 1;
      });

      // Prepare arrays for chart (sorted by revenue desc)
      const products = Object.keys(productMap).map(name => ({ name, ...productMap[name] }));
      products.sort((a,b) => b.revenue - a.revenue);

      const labels = products.map(p => p.name);
      const revenueData = products.map(p => Number(p.revenue.toFixed(2)));
      const costData = products.map(p => Number(p.cost.toFixed(2)));

      // Fill top products list
      const topProductsEl = document.getElementById('topProducts');
      if (products.length === 0) {
        topProductsEl.innerHTML = '<div class="muted small">No product sales yet.</div>';
      } else {
        topProductsEl.innerHTML = products.slice(0,8).map(p => {
          const profit = p.revenue - p.cost;
          return '<div style="padding:6px 0;border-bottom:1px solid #f1f4fb;">' +
            '<div style="font-weight:700;">' + p.name + '</div>' +
            '<div class="muted small">Sold: ' + p.count + ' — Revenue: ₹ ' + p.revenue.toFixed(2) + ' — Cost: ₹ ' + p.cost.toFixed(2) + ' — Profit: ₹ ' + profit.toFixed(2) + '</div>' +
            '</div>';
        }).join('');
      }

      // Populate totals
      document.getElementById('totalRevenue').textContent = '₹ ' + totalRevenue.toFixed(2);
      document.getElementById('totalCost').textContent = '₹ ' + totalCost.toFixed(2);
      document.getElementById('grossProfit').textContent = '₹ ' + (totalRevenue - totalCost).toFixed(2);

      // Render Chart.js — revenue vs cost per product (stacked bars disabled, two bars)
      const ctx = document.getElementById('ordersChart').getContext('2d');
      // destroy existing chart if re-rendering
      if (window._ordersChart) { window._ordersChart.destroy(); }

      window._ordersChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [
            {
              label: 'Revenue',
              data: revenueData,
              backgroundColor: 'rgba(102,126,234,0.85)',
              borderRadius: 6,
            },
            {
              label: 'Cost',
              data: costData,
              backgroundColor: 'rgba(118,75,162,0.65)',
              borderRadius: 6,
            }
          ]
        },
        options: {
          maintainAspectRatio: false,
          responsive: true,
          interaction: { mode: 'index', intersect: false },
          plugins: {
            legend: { position: 'top' },
            tooltip: {
              callbacks: {
                label: function(ctx) {
                  return ctx.dataset.label + ': ₹ ' + Number(ctx.parsed.y || ctx.parsed).toFixed(2);
                }
              }
            }
          },
          scales: {
            x: {
              ticks: { maxRotation: 40, minRotation: 0 },
              grid: { display: false }
            },
            y: {
              beginAtZero: true,
              ticks: {
                callback: function(value) { return '₹ ' + Number(value).toFixed(0); }
              }
            }
          }
        }
      });
    })();
  </script>
<% } %>

